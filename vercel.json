{
  "buildCommand": "cd server && npm install && cd .. && npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "server/index.js": {
      "runtime": "@vercel/node",
      "includeFiles": "server/services/**, server/routes/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/health",
      "destination": "/server/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}